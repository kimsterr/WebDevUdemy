<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Error!</h4>
                <p><b>Error status code: </b>
                    <%= err.status %>
                </p>
                <hr>
                <p class="mb-0"><b>Error message: </b>
                    <%= err.message %>
                </p>
            </div>
        </div>
    </div>