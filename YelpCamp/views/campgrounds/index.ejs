<% layout('layouts/boilerplate') %>
    <h1>All the campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add a new campground</a>
    </div>

    <% for (let cmpgd of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= cmpgd.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/campgrounds/<%= cmpgd._id %>">
                                <%= cmpgd.title %>
                            </a>
                        </h5>
                        <p class="card-text">
                            <%= cmpgd.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= cmpgd.location %>
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>