<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Create a new review</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= id %>/reviews" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" id="rating" class="form-range" name="review[rating]" min="1" max="5" step="1"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Write Review Here:</label>
                    <textarea class="form-control" id="body" name="review[body]" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">SUBMIT</button>
                </div>
            </form>

            <a href="/campgrounds/<%= id %>">Back to campground</a>
        </div>
    </div>